{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "2",
  "description": "Description of your extension",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab","webNavigation","tabs","<all_urls>","storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
